{
  "name": "api-server",
  "private": true,
  "version": "0.1.0",
  "description": "API Server",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --watch -- -b swc",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:ld": "npx env-cmd -f .env.local nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "ts-patch install && typia patch",
    "swagger": "npx nestia swagger",
    "swagger2": "npx nestia swagger --config nestia.config.ts --project tsconfig.json",
    "start:nd": "nest start --debug 0.0.0.0:9229 --path ./tsconfig.server.json --watch -- -b swc",
    "build:next": "next build"
  },
  "dependencies": {
    "@nestia/core": "^3.0.3",
    "@nestia/e2e": "^0.4.3",
    "@nestia/fetcher": "^3.0.3",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@types/multer": "^1.4.11",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "eslint-config-next": "^14.2.3",
    "log-beautify": "^1.2.0",
    "multer": "1.4.5-lts.1",
    "mysql2": "^3.9.4",
    "nest-next": "^10.1.0",
    "next": "^14.2.3",
    "oracledb": "^6.4.0",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.3",
    "typeorm": "^0.3.20",
    "typia": "^6.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestia/sdk": "^3.0.3",
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nestia": "^5.3.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "pnpm": {
    "patchedDependencies": {
      "nest-next@10.1.0": "patches/nest-next@10.1.0.patch"
    }
  }
}
